<Window x:Class="EventsManager.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:EventsManager.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ChangePasswordWindow" Height="130" Width="260">
    <StackPanel VerticalAlignment="Stretch">
        <TextBox 
Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
x:Name="TextBoxPassword"
materialDesign:HintAssist.Hint="Пароль"
materialDesign:HintAssist.FloatingOffset="0, -20"
BorderBrush="#c5c8cc"
Margin="0, 10"
/>
        <Button Content="Применить" Foreground="WhiteSmoke" VerticalAlignment="Bottom" Click="Button_Click"/>
    </StackPanel>
</Window>
